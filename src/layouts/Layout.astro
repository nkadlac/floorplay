---
import floorplayLogo from '../assets/floorplay-logomark.svg';

export interface Props {
	title: string;
	description?: string;
	keywords?: string[];
	canonical?: string;
	ogImage?: string;
}

const { 
	title, 
	description = "Professional epoxy floor coating for garages and basements in Mequon WI. Expert installation, 10-year warranty, free quotes.",
	keywords = ["epoxy floor coating", "garage floor epoxy", "basement floor coating", "Mequon WI", "concrete floor resurfacing"],
	canonical,
	ogImage = "/images/og-default.jpg"
} = Astro.props;

const fullTitle = title.includes('Mequon') ? title : `${title} | Mequon Epoxy Pros`;
const currentUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : `https://floorplay.agency${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords.join(', ')} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="robots" content="index, follow" />
		<!-- Favicon and App Icons -->
		<link rel="icon" type="image/png" href="/favicon.png" />
		<!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
		
		<!-- PWA Manifest (optional for future) -->
		<meta name="theme-color" content="#ffffff" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@400;700;900&family=Caveat:wght@600&family=Space+Grotesk:wght@400;700&family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical || currentUrl} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:site_name" content="FloorPlay Agency" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={currentUrl} />
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />
		
		<!-- Local Business Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "FloorPlay Agency",
			"description": "Professional epoxy floor coating specialists serving Mequon WI and surrounding areas.",
			"url": "https://floorplay.agency",
			"telephone": "(413)555-3769",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "123 Main Street",
				"addressLocality": "Mequon",
				"addressRegion": "WI",
				"postalCode": "53097",
				"addressCountry": "US"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 43.2261,
				"longitude": -87.9734
			},
			"areaServed": [
				"Mequon, WI",
				"Grafton, WI",
				"Cedarburg, WI",
				"Thiensville, WI",
				"Germantown, WI",
				"Menomonee Falls, WI"
			],
			"serviceType": [
				"Epoxy Floor Coating",
				"Garage Floor Coating",
				"Basement Floor Resurfacing",
				"Concrete Floor Coating"
			],
			"openingHours": [
				"Mo-Fr 08:00-18:00",
				"Sa 09:00-16:00"
			]
		}
		</script>
	</head>
	<body>
		<slot />
		
		<!-- Global Mobile Menu Overlay -->
		<div class="mobile-menu-overlay" id="mobileMenuOverlay">
			<div class="mobile-menu-header">
				<div class="mobile-logo">
					<img src={floorplayLogo.src} alt="Floorplay" class="mobile-logo-image" />
					<p class="mobile-logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
				</div>
				<button class="mobile-close-btn" id="mobileCloseBtn" aria-label="Close mobile menu">
					<span class="close-line"></span>
					<span class="close-line"></span>
				</button>
			</div>
			<nav class="mobile-nav">
				<a href="/services/" class="mobile-nav-link">
					<span>All Services</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
				<a href="/services/flooring-contractors-seo/" class="mobile-nav-link">
					<span>Local Search Marketing</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
				<a href="/free-audit/" class="mobile-nav-link">
					<span>Free SEO Audit</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
			</nav>
		</div>
	</body>
</html>
<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		line-height: 1.6;
		color: #333;
	}
	
	body {
		background-color: #ffffff;
	}
	
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		margin-bottom: 1rem;
	}
	
	p {
		margin-bottom: 1rem;
	}

	ul {
		margin-bottom: 2rem;
		list-style-position: inside;
	}
	
	a {
		color: #ff6b35;
		text-decoration: none;
	}
	
	a:hover {
		text-decoration: underline;
	}
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	/* Global Mobile Menu Styles */
	.mobile-menu-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: #0040ff;
		z-index: 99999;
		display: none;
	}

	.mobile-menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 40px 1rem 20px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
	}

	.mobile-logo {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 4px;
	}

	.mobile-logo-image {
		height: auto;
		flex-shrink: 0;
		filter: brightness(0) invert(1);
	}

	.mobile-logo-text {
		font-family: 'Big Shoulders Display', sans-serif;
		font-weight: 700;
		font-size: 28px;
		letter-spacing: 1.6px;
		color: #ffffff;
		line-height: 0.831;
		margin: 0;
	}

	.mobile-logo-tagline {
		font-family: 'Work Sans', sans-serif;
		font-weight: 400;
		font-size: 12px;
		color: #ffffff;
		letter-spacing: -0.28px;
		line-height: 1.2;
		text-transform: uppercase;
		margin: 8px 0 0 0;
	}

	.mobile-close-btn {
		background: none;
		border: none;
		width: 24px;
		height: 24px;
		position: relative;
		cursor: pointer;
		padding: 0;
	}

	.close-line {
		display: block;
		position: absolute;
		width: 24px;
		height: 2px;
		background-color: #ffffff;
		top: 50%;
		left: 50%;
		transform-origin: center;
	}

	.close-line:first-child {
		transform: translate(-50%, -50%) rotate(45deg);
	}

	.close-line:last-child {
		transform: translate(-50%, -50%) rotate(-45deg);
	}

	.mobile-nav {
		padding: 40px 1rem;
		display: flex;
		flex-direction: column;
		gap: 40px;
	}

	.mobile-nav-link {
		display: flex;
		justify-content: space-between;
		align-items: center;
		text-decoration: none;
		color: #ffffff;
		font-family: 'Big Shoulders Display', sans-serif;
		font-weight: 700;
		font-size: 32px;
		letter-spacing: -0.64px;
		line-height: 1.1;
	}

	.mobile-nav-arrow {
		font-size: 32px;
		line-height: 1;
	}

</style>
