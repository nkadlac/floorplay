---
import floorplayLogo from '../assets/floorplay-logomark.svg';

export interface Props {
	title: string;
	description?: string;
	keywords?: string[];
	canonical?: string;
	ogImage?: string;
}

const { 
	title, 
	description = "Professional epoxy floor coating for garages and basements in Mequon WI. Expert installation, 10-year warranty, free quotes.",
	keywords = ["epoxy floor coating", "garage floor epoxy", "basement floor coating", "Mequon WI", "concrete floor resurfacing"],
	canonical,
	ogImage = "/images/og-default.jpg"
} = Astro.props;

const fullTitle = title.includes('Floorplay') ? title : `${title} | Floorplay Agency`;
const currentUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : `https://floorplay.agency${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords.join(', ')} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="robots" content="index, follow" />
		<!-- Favicon and App Icons -->
		<link rel="icon" type="image/png" href="/favicon.png" />
		<!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
		
		<!-- PWA Manifest (optional for future) -->
		<meta name="theme-color" content="#ffffff" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>
		
		<!-- Google Fonts - Optimized Loading -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@400;700;900&family=Caveat:wght@600&family=Space+Grotesk:wght@400;700&family=Work+Sans:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@400;700;900&family=Caveat:wght@600&family=Space+Grotesk:wght@400;700&family=Work+Sans:wght@400;600;700&display=swap"></noscript>
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical || currentUrl} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:site_name" content="Floorplay Agency" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={currentUrl} />
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />
		
		<!-- Local Business Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "Floorplay Agency",
			"description": "Digital marketing agency specializing exclusively in epoxy, concrete surfacing, and basement resurfacing contractors.",
			"url": "https://floorplay.agency",
			"telephone": "(413)555-3769",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "123 Main Street",
				"addressLocality": "Mequon",
				"addressRegion": "WI",
				"postalCode": "53097",
				"addressCountry": "US"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 43.2261,
				"longitude": -87.9734
			},
			"areaServed": [
				"Mequon, WI",
				"Grafton, WI",
				"Cedarburg, WI",
				"Thiensville, WI",
				"Germantown, WI",
				"Menomonee Falls, WI"
			],
			"serviceType": [
				"Digital Marketing for Epoxy Contractors",
				"Local SEO for Concrete Coating Companies", 
				"Google Business Profile for Basement Resurfacing",
				"Lead Generation for Epoxy Floor Contractors"
			],
			"openingHours": [
				"Mo-Fr 08:00-18:00",
				"Sa 09:00-16:00"
			]
		}
		</script>
		
		<!-- Allow additional head content via slots -->
		<slot name="head" />
	</head>
	<body>
		<slot />
		
		<!-- Global Mobile Menu Overlay -->
		<div class="mobile-menu-overlay" id="mobileMenuOverlay">
			<div class="mobile-menu-header">
				<div class="mobile-logo">
					<img src={floorplayLogo.src} alt="Floorplay" class="mobile-logo-image" />
					<p class="mobile-logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
				</div>
				<button class="mobile-close-btn" id="mobileCloseBtn" aria-label="Close mobile menu">
					<span class="close-line"></span>
					<span class="close-line"></span>
				</button>
			</div>
			<nav class="mobile-nav">
				<a href="/services/" class="mobile-nav-link">
					<span>All Services</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
				<a href="/articles/" class="mobile-nav-link">
					<span>All Articles</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
				<a href="/services/flooring-contractors-seo/" class="mobile-nav-link">
					<span>Local Search Marketing</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
				<a href="/free-audit/" class="mobile-nav-link">
					<span>Free SEO Audit</span>
					<span class="mobile-nav-arrow">→</span>
				</a>
			</nav>
		</div>
	</body>
</html>
<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		counter-reset: none !important;
	}
	
	*::before, *::after {
		counter-increment: none !important;
	}
	
	/* Hide any stray counter content */
	body::before, html::before, div::before, section::before, header::before {
		content: none !important;
		display: none !important;
	}
	
	/* Disable counters for TOC specifically */
	.toc-no-counter, .toc-no-counter li, .toc-container ol, .toc-container li {
		counter-reset: none !important;
		counter-increment: none !important;
	}
	
	.toc-no-counter li::before, .toc-container li::before {
		content: none !important;
		display: none !important;
	}
	
	html {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		line-height: 1.6;
		color: #333;
		scroll-behavior: smooth;
	}
	
	body {
		background-color: #ffffff;
	}
	
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		margin-bottom: 1rem;
		font-family: 'Big Shoulders Display', sans-serif;
		font-weight: 700;
	}
	
	h2 {
		font-family: 'Big Shoulders Display', sans-serif !important;
		font-weight: 900 !important;
	}

	/* Article content H2 override */
	.article-content-section .container .article-content h2 {
		margin-top: 32px !important;
		margin-bottom: 8px !important;
	}
	
	p {
		margin-bottom: 1rem;
	}

	ul {
		margin-bottom: 2rem;
		list-style: none !important;
		padding-left: 0;
	}

	ul li {
		position: relative;
		padding-left: 32px;
		margin-bottom: 12px;
	}

	ul li::before {
		content: '';
		position: absolute;
		left: 0;
		top: 2px;
		width: 24px;
		height: 24px;
		background-color: #000000;
		border-radius: 2px;
		background-image: url("data:image/svg+xml,%3Csvg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M13.5 4.5L6 12L2.5 8.5' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
		background-repeat: no-repeat;
		background-position: center;
		background-size: 16px 16px;
	}

	/* Ordered Lists - Custom Numbered Bullets - Only apply to content areas */
	.article-content ol,
	ol {
		margin-bottom: 2rem;
		list-style: none !important;
		padding-left: 0;
		counter-reset: custom-counter !important;
	}

	.article-content ol li,
	ol li {
		position: relative;
		padding-left: 40px;
		margin-bottom: 12px;
		counter-increment: custom-counter !important;
	}

	.article-content ol li::before,
	ol li::before {
		content: counter(custom-counter);
		position: absolute;
		left: 0;
		top: 2px;
		width: 24px;
		height: 24px;
		background-color: #0040ff;
		border-radius: 2px;
		color: #ffffff;
		font-family: 'Work Sans', sans-serif;
		font-weight: 700;
		font-size: 14px;
		display: flex;
		align-items: center;
		justify-content: center;
		line-height: 1;
	}
	
	a {
		color: #0040ff;
		text-decoration: none;
	}
	
	a:hover {
		text-decoration: underline;
	}
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	/* Global Mobile Menu Styles */
	.mobile-menu-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: #0040ff;
		z-index: 99999;
		display: none;
	}

	.mobile-menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 40px 1rem 20px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
	}

	.mobile-logo {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 4px;
	}

	.mobile-logo-image {
		height: auto;
		flex-shrink: 0;
		filter: brightness(0) invert(1);
	}

	.mobile-logo-text {
		font-family: 'Big Shoulders Display', sans-serif;
		font-weight: 700;
		font-size: 28px;
		letter-spacing: 1.6px;
		color: #ffffff;
		line-height: 0.831;
		margin: 0;
	}

	.mobile-logo-tagline {
		font-family: 'Work Sans', sans-serif;
		font-weight: 400;
		font-size: 12px;
		color: #ffffff;
		letter-spacing: -0.28px;
		line-height: 1.2;
		text-transform: uppercase;
		margin: 8px 0 0 0;
	}

	.mobile-close-btn {
		background: none;
		border: none;
		width: 24px;
		height: 24px;
		position: relative;
		cursor: pointer;
		padding: 0;
	}

	.close-line {
		display: block;
		position: absolute;
		width: 24px;
		height: 2px;
		background-color: #ffffff;
		top: 50%;
		left: 50%;
		transform-origin: center;
	}

	.close-line:first-child {
		transform: translate(-50%, -50%) rotate(45deg);
	}

	.close-line:last-child {
		transform: translate(-50%, -50%) rotate(-45deg);
	}

	.mobile-nav {
		padding: 40px 1rem;
		display: flex;
		flex-direction: column;
		gap: 40px;
	}

	.mobile-nav-link {
		display: flex;
		justify-content: space-between;
		align-items: center;
		text-decoration: none;
		color: #ffffff;
		font-family: 'Big Shoulders Display', sans-serif;
		font-weight: 700;
		font-size: 32px;
		letter-spacing: -0.64px;
		line-height: 1.1;
	}

	.mobile-nav-arrow {
		font-size: 32px;
		line-height: 1;
	}

</style>
