<Layout 
  title={content.seo?.metaTitle || content.title}
  description={content.seo?.metaDescription}
  canonical="https://floorplay.agency/"
>

  <!-- Top Section -->
  <section class="top-section">
    <div class="container">
      <!-- Header -->
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <div class="logo-text">Floorplay</div>
            <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
          </div>
          <nav class="nav">
            <a href="/services/flooring-contractors-seo" class="nav-link">Services</a>
            <a href="/free-audit" class="nav-link nav-cta">
              <span class="nav-cta-text">Free Local Plan</span>
              <span class="nav-cta-arrow">→</span>
            </a>
          </nav>
        </div>
        <div class="divider"></div>
      </div>
      
      <!-- Hero Content -->
      <div class="hero-content">
        <h1 class="headline">Stop Losing <span class="highlight-blue">$5K+ Epoxy Jobs</span> to Local Competition.</h1>
