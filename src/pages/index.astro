---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import magnifyingGlass from '../assets/magnifying-glass.svg';
import phoneMockup from '../assets/phone-mockup.png';

// Content data
const content = {
  title: "Stop Losing $5k+ Epoxy Jobs to Competitors Online | Floorplay",
  seo: {
    metaTitle: "More Calls for Flooring Epoxy & Coating Pros in Milwaukee | Floorplay",
    metaDescription: "Show up in the top spots on Google Maps. I set up your Google profile, build town pages, and grow real reviews—so you book more garage and basement jobs across Milwaukee and nearby."
  }
};

// Image constants - keeping imgDivider for now as it's used in CSS
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
