---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { PortableText } from 'astro-portabletext';

// Fetch homepage content and featured services
const [pageData, services, faqs] = await Promise.all([
  sanityClient.fetch(`
    *[_type == "page" && slug.current == "home"][0]{
      title,
      seo,
      hero,
      content,
      aiContext
    }
  `),
  sanityClient.fetch(`
    *[_type == "service"] | order(_createdAt desc)[0...2]{
      name,
      slug,
      shortDescription,
      features,
      "image": images[0]
    }
  `),
  sanityClient.fetch(`
    *[_type == "faq"] | order(priority desc)[0...3]{
      question,
      answer,
      category
    }
  `)
]);

// Fallback content if Sanity content isn't available yet
const defaultContent = {
  title: "Epoxy Flooring Contractor Marketing | $5k+ Jobs Monthly | Floorplay",
  hero: {
    headline: "Get 5+ Floor Coating Leads Per Week Without Cold Calling",
    subheadline: "We help epoxy floor contractors and garage coac a\ting specialists grow their businesses with proven marketing systems, qualified leads, and conversion-optimized websites.",
    ctaText: "Get More Leads",
    ctaLink: "/contact"
  },
  seo: {
    metaTitle: "FloorPlay Agency - Lead Generation for Floor Coating Contractors",
    metaDescription: "Help your epoxy floor coating business grow with qualified leads, proven marketing systems, and conversion-optimized websites. Grow your contractor business today."
  }
};

const content = pageData || defaultContent;
---

<Layout 
  title={content.seo?.metaTitle || content.title}
  description={content.seo?.metaDescription}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>{content.hero?.headline || content.title}</h1>
        <p class="hero-subtitle">
          {content.hero?.subheadline || "Professional epoxy floor coating for garages and basements in Mequon WI area."}
        </p>
        <div class="hero-cta">
          <a href={content.hero?.ctaLink || "/contact"} class="cta-button primary">
            {content.hero?.ctaText || "Get Free Quote"}
          </a>
          <a href="tel:(413)555-3769" class="cta-button secondary">
            Call (413) 555-EPOXY
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <div class="container">
      <h2>Our Expert Services</h2>
      <div class="services-grid">
        {services?.length > 0 ? (
          services.map((service) => (
            <div class="service-card">
              <h3>{service.name}</h3>
              <p>{service.shortDescription}</p>
              <div class="service-features">
                {service.features?.slice(0, 3).map((feature) => (
                  <span class="feature">✓ {feature}</span>
                ))}
              </div>
              <a href={`/services/${service.slug?.current}`} class="service-link">
                Learn More →
              </a>
            </div>
          ))
        ) : (
          <>
            <div class="service-card">
              <h3>Lead Generation Systems</h3>
              <p>Get qualified homeowners ready to invest in floor coating services. Our proven marketing funnels deliver high-intent leads directly to your business.</p>
              <div class="service-features">
                <span class="feature">✓ Pre-qualified homeowner leads</span>
                <span class="feature">✓ Local market targeting</span>
                <span class="feature">✓ Conversion-optimized landing pages</span>
              </div>
              <a href="/services/lead-generation" class="service-link">Learn More →</a>
            </div>
            <div class="service-card">
              <h3>Contractor Websites</h3>
              <p>Professional, mobile-optimized websites that convert visitors into customers. Built specifically for floor coating contractors with proven conversion elements.</p>
              <div class="service-features">
                <span class="feature">✓ Mobile-responsive design</span>
                <span class="feature">✓ Local SEO optimization</span>
                <span class="feature">✓ Built-in lead capture</span>
              </div>
              <a href="/services/contractor-websites" class="service-link">Learn More →</a>
            </div>
          </>
        )}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq">
    <div class="container">
      <h2>Frequently Asked Questions</h2>
      <div class="faq-grid">
        {faqs?.length > 0 ? (
          faqs.map((faq) => (
            <div class="faq-item">
              <h3>{faq.question}</h3>
              <PortableText value={faq.answer} />
            </div>
          ))
        ) : (
          <>
            <div class="faq-item">
              <h3>How do you generate leads for floor coating contractors?</h3>
              <p>We use targeted digital marketing, local SEO, and conversion-optimized landing pages to attract homeowners actively looking for floor coating services in your area.</p>
            </div>
            <div class="faq-item">
              <h3>What kind of ROI can I expect?</h3>
              <p>Our contractors typically see 3-5x ROI within the first 90 days. Most generate enough leads in the first month to cover their investment and scale from there.</p>
            </div>
            <div class="faq-item">
              <h3>Do you work with contractors in my area?</h3>
              <p>We work with floor coating contractors nationwide. We ensure market exclusivity, so only one contractor per service area gets access to our lead generation system.</p>
            </div>
          </>
        )}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Scale Your Floor Coating Business?</h2>
      <p>Join successful contractors who've doubled their revenue with our proven lead generation systems. Get your first qualified leads within 30 days.</p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-button primary">Get More Leads</a>
        <a href="tel:(413)555-3769" class="cta-button secondary">Schedule Call</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-button.primary {
    background: #ff6b35;
    color: white;
  }

  .cta-button.primary:hover {
    background: #e55a2b;
    transform: translateY(-2px);
  }

  .cta-button.secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .cta-button.secondary:hover {
    background: white;
    color: #1a1a1a;
  }

  .services {
    padding: 4rem 0;
    background: #f8f9fa;
  }

  .services h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    color: #1a1a1a;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .service-card h3 {
    color: #1a1a1a;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .service-card p {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .service-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .feature {
    color: #2d5a27;
    font-size: 0.9rem;
  }


  .service-link {
    color: #ff6b35;
    text-decoration: none;
    font-weight: 600;
  }

  .service-link:hover {
    text-decoration: underline;
  }

  .faq {
    padding: 4rem 0;
  }

  .faq h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    color: #1a1a1a;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    padding: 1.5rem;
    border-left: 4px solid #ff6b35;
    background: #f8f9fa;
  }

  .faq-item h3 {
    color: #1a1a1a;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .faq-item p {
    color: #666;
    line-height: 1.6;
  }

  .cta-section {
    background: #1a1a1a;
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  .cta-section p {
    margin-bottom: 2rem;
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .services h2, .faq h2, .cta-section h2 {
      font-size: 2rem;
    }
    
    .cta-button {
      padding: 0.75rem 1.5rem;
    }
  }
</style>
