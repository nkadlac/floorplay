---
import Layout from '../../layouts/Layout.astro';
import { createClient } from '@sanity/client';

import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
  const sanityClient = createClient({
    projectId: 'tvo5sug9',
    dataset: 'production',
    useCdn: false,
    apiVersion: '2024-01-01',
  });

  const services = await sanityClient.fetch(`
    *[_type == "service"]{
      "slug": slug.current
    }
  `);

  return services.map((service) => ({
    params: { slug: service.slug },
  }));
}

const sanityClient = createClient({
  projectId: 'tvo5sug9',
  dataset: 'production',
  useCdn: false, // Disable CDN for live updates during development
  apiVersion: '2024-01-01',
});

// Get the slug from the URL
const { slug } = Astro.params;

// Fetch fresh data for this specific service on each request
const service = await sanityClient.fetch(`
  *[_type == "service" && slug.current == $slug][0]{
    "slug": slug.current,
    name,
    headline,
    shortDescription,
    fullDescription,
    features,
    process,
    materials,
    serviceArea,
    images,
    seo,
    faq,
    aiTrainingData
  }
`, { slug });

// Return 404 if service not found
if (!service) {
  return Astro.redirect('/404');
}


// SEO settings
const pageTitle = service.seo?.metaTitle || `${service.name} | FloorPlay Agency`;
const pageDescription = service.seo?.metaDescription || service.shortDescription;

// Image constants (reusing from homepage)
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
