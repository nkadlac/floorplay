---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';
import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
  const services = await sanityClient.fetch(`
    *[_type == "service"]{
      "slug": slug.current,
      name,
      shortDescription,
      fullDescription,
      features,
      process,
      pricing,
      materials,
      serviceArea,
      duration,
      images,
      seo,
      aiTrainingData
    }
  `);

  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;

// SEO settings
const pageTitle = service.seo?.metaTitle || `${service.name} | FloorPlay Agency`;
const pageDescription = service.seo?.metaDescription || service.shortDescription;

// Image constants (reusing from homepage)
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={service.seo?.keywords}
>
  <!-- Background Pattern -->
  <div class="background-pattern"></div>

  <!-- Header Section -->
  <section class="header-section">
    <div class="container">
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <a href="/"><h1>Floorplay</h1></a>
          </div>
          <nav class="nav">
            <a href="/services/local-seo" class="nav-link">Services</a>
            <a href="/free-audit" class="nav-link">Free Audit</a>
          </nav>
        </div>
        <div class="divider"></div>
        <div class="tagline">
          <p>Where Specialty Flooring Contractors Go to Grow</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Hero Section -->
  <section class="service-hero">
    <div class="container">
      <div class="service-header">
        <h1 class="service-title">{service.name}</h1>
        <p class="service-description">{service.shortDescription}</p>
        
        {service.pricing && (
          <div class="pricing-highlight">
            <span class="price-label">Starting at</span>
            <span class="price-amount">${service.pricing.startingPrice?.toLocaleString()}</span>
            <span class="price-unit">{service.pricing.priceUnit}</span>
          </div>
        )}
        
        <div class="service-cta">
          <a href="/free-audit" class="cta-button primary">
            Get Your Free Strategy Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Features Section -->
  {service.features && service.features.length > 0 && (
    <section class="features-section">
      <div class="container">
        <h2 class="section-title">What's Included</h2>
        <div class="features-grid">
          {service.features.map((feature) => (
            <div class="feature-item">
              <span class="feature-check">âœ“</span>
              <span class="feature-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Service Process Section -->
  {service.process && service.process.length > 0 && (
    <section class="process-section">
      <div class="container">
        <h2 class="section-title">Our Process</h2>
        <div class="process-steps">
          {service.process.map((step, index) => (
            <div class="process-step">
              <div class="step-number">{index + 1}</div>
              <div class="step-content">
                <h3 class="step-title">{step.step}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Duration Section -->
  {service.duration && (
    <section class="duration-section">
      <div class="container">
        <h2 class="section-title">Timeline & Results</h2>
        <div class="duration-grid">
          {service.duration.prep && (
            <div class="duration-item">
              <h4 class="duration-label">Setup Phase</h4>
              <p class="duration-time">{service.duration.prep}</p>
            </div>
          )}
          {service.duration.installation && (
            <div class="duration-item">
              <h4 class="duration-label">Implementation</h4>
              <p class="duration-time">{service.duration.installation}</p>
            </div>
          )}
          {service.duration.curing && (
            <div class="duration-item">
              <h4 class="duration-label">Initial Results</h4>
              <p class="duration-time">{service.duration.curing}</p>
            </div>
          )}
          {service.duration.total && (
            <div class="duration-item">
              <h4 class="duration-label">Full Results</h4>
              <p class="duration-time">{service.duration.total}</p>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Service Areas Section -->
  {service.serviceArea && service.serviceArea.length > 0 && (
    <section class="service-areas">
      <div class="container">
        <h2 class="section-title">Service Areas</h2>
        <div class="areas-list">
          {service.serviceArea.map((area) => (
            <span class="area-tag">{area}</span>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Pricing Section -->
  {service.pricing && (
    <section class="pricing-section">
      <div class="container">
        <h2 class="section-title">Investment</h2>
        <div class="pricing-card">
          <div class="pricing-main">
            <div class="price-display">
              <span class="price-amount">${service.pricing.startingPrice?.toLocaleString()}</span>
              <span class="price-unit">{service.pricing.priceUnit}</span>
            </div>
            <p class="pricing-note">Starting price - final investment depends on several factors</p>
          </div>
          
          {service.pricing.priceFactors && service.pricing.priceFactors.length > 0 && (
            <div class="price-factors">
              <h4 class="factors-title">Factors affecting investment:</h4>
              <ul class="factors-list">
                {service.pricing.priceFactors.map((factor) => (
                  <li class="factor-item">{factor}</li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  {service.aiTrainingData?.commonQuestions && service.aiTrainingData.commonQuestions.length > 0 && (
    <section class="faq-section">
      <div class="container">
        <h2 class="section-title">Frequently Asked Questions</h2>
        <div class="faq-list">
          {service.aiTrainingData.commonQuestions.map((qa) => (
            <div class="faq-item">
              <h3 class="faq-question">{qa.question}</h3>
              <p class="faq-answer">{qa.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Get Started?</h2>
        <p class="cta-description">
          Get your free audit and see exactly how we can help grow your epoxy business.
        </p>
        <div class="cta-buttons">
          <a href="/free-audit" class="cta-button primary">
            Get Your Free Audit
          </a>
          <a href="mailto:nate@floorplay.agency" class="cta-button secondary">
            Email Us Directly
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-section">
    <div class="container">
      <h3 class="footer-logo">Floorplay</h3>
      <p class="footer-text">All rights reserved.</p>
    </div>
  </section>
