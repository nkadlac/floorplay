---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const { Content } = await service.render();

// SEO settings
const pageTitle = service.data.seo?.metaTitle || `${service.data.name} | FloorPlay Agency`;
const pageDescription = service.data.seo?.metaDescription || service.data.shortDescription;

// Image constants (reusing from homepage)
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
>

  <!-- Header Section -->
  <section class="header-section">
    <div class="container">
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <a href="/"><h1>Floorplay</h1></a>
            <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
          </div>
          <nav class="nav">
            <a href="/services/flooring-contractors-seo" class="nav-link active">Services</a>
            <a href="/free-audit" class="nav-link">Free Local Audit</a>
          </nav>
        </div>
        <div class="divider"></div>
      </div>
    </div>
  </section>

  <!-- Service Hero Section -->
  <section class="service-hero">
    <div class="container">
      <div class="service-header">
        <h1 class="service-title">{service.data.headline || service.data.name}</h1>
        <p class="service-description">{service.data.shortDescription}</p>
        
        <div class="service-cta">
          <a href="/free-audit" class="cta-button green">
            Get Your Free Strategy Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Description Section -->
  <section class="description-section">
    <div class="container">
      <div class="description-content">
        <Content />
      </div>
    </div>
  </section>

  <!-- Service Features Section -->
  {service.data.features && service.data.features.length > 0 && (
    <section class="features-section">
      <div class="container">
        <h2 class="section-title">What's Included</h2>
        <div class="features-grid">
          {service.data.features.map((feature) => (
            <div class="feature-item">
              <span class="feature-check">✓</span>
              <span class="feature-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow Your Business?</h2>
        <p class="cta-description">
          Book a free strategy call to discuss how we can help you dominate local searches and capture more $5k+ jobs.
        </p>
        <div class="cta-buttons">
          <a href="/free-audit" class="cta-button primary">
            Get Free Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-section">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-header">
          <h3 class="footer-logo">Floorplay</h3>
        </div>
        <nav class="footer-nav">
          <a href="/" class="footer-link">Home</a>
          <a href="/services/flooring-contractors-seo" class="footer-link">Local Search Marketing</a>
          <a href="/free-audit" class="footer-link">Free SEO Audit</a>
        </nav>
        <p class="footer-copyright">All rights reserved. Copyright © 2025 Floorplay</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Container */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Header Section */
  .header-section {
    background: #ffffff;
    padding: 40px 0 20px;
    position: relative;
    z-index: 1;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .logo-nav {
    display: flex;
    justify-content: space-between;
    align-items: end;
  }

  .logo {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .logo h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 32px;
    letter-spacing: 1.6px;
    margin: 0;
    line-height: 0.831;
    color: #000000;
  }

  .logo a {
    text-decoration: none;
    color: inherit;
  }

  .logo-tagline {
    font-family: 'Sora', sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #626262;
    letter-spacing: -0.28px;
    line-height: 1.2;
    text-transform: uppercase;
    margin: 0;
  }

  .nav {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .nav-link {
    font-family: 'Sora', sans-serif;
    font-weight: 700;
    font-size: 16px;
    color: #000000;
    text-decoration: none;
    letter-spacing: 0.8px;
    line-height: 0.831;
    padding: 8px 4px;
    position: relative;
    cursor: pointer;
  }

  .nav-link.active {
    color: #6bb77e;
    border-bottom: 2px solid #6bb77e;
  }

  .nav-link:hover {
    color: #6bb77e;
  }

  .divider {
    height: 1px;
    background: url('http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg') repeat-x;
    width: 100%;
  }

  /* Service Hero Section */
  .service-hero {
    background: #ffffff;
    padding: 40px 0 60px;
    position: relative;
    z-index: 1;
  }

  .service-header {
    text-align: center;
  }

  .service-title {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 48px;
    color: #000000;
    letter-spacing: -0.96px;
    line-height: 1.2;
    margin: 0 0 24px 0;
  }

  .service-description {
    font-family: 'Sora', sans-serif;
    font-weight: 400;
    font-size: 22px;
    color: #000000;
    letter-spacing: -0.44px;
    line-height: 1.4;
    margin: 0 0 40px 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .service-cta {
    margin-top: 40px;
  }

  /* Description Section */
  .description-section {
    background: #ffffff;
    padding: 60px 0;
  }

  .description-content {
    font-family: 'Sora', sans-serif;
    font-weight: 400;
    font-size: 18px;
    color: #000000;
    letter-spacing: -0.36px;
    line-height: 1.6;
  }

  .description-content h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 32px;
    color: #000000;
    letter-spacing: -0.64px;
    line-height: 1.3;
    margin: 32px 0 24px 0;
  }

  .description-content h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 24px;
    color: #000000;
    letter-spacing: -0.48px;
    line-height: 1.3;
    margin: 32px 0 24px 0;
  }

  .description-content h4 {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: #000000;
    letter-spacing: -0.4px;
    line-height: 1.3;
    margin: 24px 0 16px 0;
  }

  .description-content p {
    margin: 0 0 16px 0;
  }

  .description-content ul,
  .description-content ol {
    margin: 16px 0 24px 0;
    padding-left: 24px;
  }

  .description-content li {
    margin-bottom: 8px;
  }

  /* CTA Buttons */
  .cta-button {
    padding: 24px 32px;
    text-decoration: none;
    font-family: 'Sora', sans-serif;
    font-weight: 700;
    font-size: 18px;
    letter-spacing: -0.36px;
    line-height: 1.3;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block;
    border-radius: 4px;
  }

  .cta-button.primary {
    background: #ffffff;
    color: #000000;
    border: 2px solid #6bb77e;
  }

  .cta-button.primary:hover {
    background: #000000;
    color: #ffffff;
    transform: translateY(-2px);
  }

  .cta-button.green {
    background: #6bb77e;
    color: #000000;
  }

  .cta-button.green:hover {
    background: #5fa36f;
    transform: translateY(-2px);
  }

  /* Features Section */
  .features-section {
    background: #6bb77e;
    padding: 60px 0;
  }

  .section-title {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 38px;
    color: #000000;
    letter-spacing: -0.76px;
    line-height: 1.4;
    margin: 0 0 40px 0;
    text-align: center;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .feature-check {
    color: #000000;
    font-weight: 700;
    font-size: 20px;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .feature-text {
    font-family: 'Sora', sans-serif;
    font-weight: 400;
    font-size: 18px;
    color: #000000;
    letter-spacing: -0.36px;
    line-height: 1.4;
  }

  /* Final CTA Section */
  .final-cta {
    background: #6bb77e;
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 42px;
    color: #000000;
    letter-spacing: -0.84px;
    line-height: 1.2;
    margin: 0 0 24px 0;
  }

  .cta-description {
    font-family: 'Sora', sans-serif;
    font-weight: 400;
    font-size: 20px;
    color: #000000;
    letter-spacing: -0.4px;
    line-height: 1.4;
    margin: 0 0 40px 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  /* Footer Section */
  .footer-section {
    background: #000000;
    padding: 80px 0;
  }

  .footer-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .footer-header {
    padding-bottom: 40px;
  }

  .footer-logo {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 49px;
    color: #ffffff;
    letter-spacing: -0.98px;
    line-height: 1.4;
    margin: 0;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding-top: 24px;
    border-top: 1px solid #424242;
  }

  .footer-link {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 400;
    font-size: 20px;
    color: #ffffff;
    text-decoration: none;
    letter-spacing: -0.4px;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: #6bb77e;
  }

  .footer-copyright {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #838383;
    letter-spacing: -0.28px;
    line-height: 1.4;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header-section {
      padding: 30px 0 15px;
    }

    .logo-nav {
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }
    
    .logo h1 {
      font-size: 28px;
    }
    
    .nav {
      gap: 16px;
    }
    
    .nav-link {
      font-size: 18px;
    }

    .service-hero {
      padding: 30px 0 50px;
    }
    
    .service-title {
      font-size: 32px;
      letter-spacing: -0.64px;
    }
    
    .service-description {
      font-size: 18px;
      letter-spacing: -0.36px;
      margin-bottom: 30px;
    }

    .description-section {
      padding: 50px 0;
    }

    .description-content {
      font-size: 16px;
    }

    .description-content h2 {
      font-size: 28px;
      letter-spacing: -0.56px;
    }

    .description-content h3 {
      font-size: 20px;
      letter-spacing: -0.4px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .cta-title {
      font-size: 28px;
      letter-spacing: -0.56px;
    }

    .cta-description {
      font-size: 18px;
      margin-bottom: 30px;
    }

    .footer-section {
      padding: 50px 0;
    }

    .footer-header {
      padding-bottom: 20px;
    }
    
    .footer-nav {
      padding-top: 20px;
    }

    .footer-logo {
      font-size: 32px;
      letter-spacing: -0.64px;
    }

    .footer-link {
      font-size: 18px;
      letter-spacing: -0.36px;
    }

    .footer-copyright {
      font-size: 12px;
      letter-spacing: -0.24px;
    }
  }
</style>