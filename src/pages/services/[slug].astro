<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={service.seo?.keywords}
>

  <!-- Header Section -->
  <section class="header-section">
    <div class="container">
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <a href="/"><h1>Floorplay</h1></a>
            <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
          </div>
          <nav class="nav">
            <a href="/services/flooring-contractors-seo" class="nav-link active">Services</a>
            <a href="/free-audit" class="nav-link">Free Local Audit</a>
          </nav>
        </div>
        <div class="divider"></div>
      </div>
    </div>
  </section>

  <!-- Service Hero Section -->
  <section class="service-hero">
    <div class="container">
      <div class="service-header">
        <h1 class="service-title">{service.headline || service.name}</h1>
        <p class="service-description">{service.shortDescription}</p>
        
        <div class="service-cta">
          <a href="/free-audit" class="cta-button green">
            Get Your Free Strategy Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Description Section -->
  {service.fullDescription && service.fullDescription.length > 0 && (
    <section class="description-section">
      <div class="container">
        <div class="description-content">
          <PortableText value={service.fullDescription} />
        </div>
      </div>
    </section>
  )}

  <!-- Service Features Section -->
  {service.features && service.features.length > 0 && (
    <section class="features-section">
      <div class="container">
        <h2 class="section-title">What's Included</h2>
        <div class="features-grid">
          {service.features.map((feature) => (
            <div class="feature-item">
              <span class="feature-check">✓</span>
              <span class="feature-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Service Process Section -->
  {service.process && service.process.length > 0 && (
    <section class="process-section">
      <div class="container">
        <h2 class="section-title">Our Process</h2>
        <div class="process-steps">
          {service.process.map((step, index) => (
            <div class="process-step">
              <div class="step-number">{index + 1}</div>
              <div class="step-content">
                <h3 class="step-title">{step.step}</h3>
                <p class="step-description">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}


  <!-- Service Areas Section -->
  {service.serviceArea && service.serviceArea.length > 0 && (
    <section class="service-areas">
      <div class="container">
        <h2 class="section-title">Service Areas</h2>
        <div class="areas-list">
          {service.serviceArea.map((area) => (
            <span class="area-tag">{area}</span>
          ))}
        </div>
      </div>
    </section>
  )}


  <!-- FAQ Section -->
  {(service.faq && service.faq.length > 0) || (service.aiTrainingData?.commonQuestions && service.aiTrainingData.commonQuestions.length > 0) ? (
    <section class="faq-section">
      <div class="container">
        <h2 class="section-title">Frequently Asked Questions</h2>
        <div class="faq-list">
          {/* Use dedicated FAQ field first, fallback to AI training data */}
          {(service.faq && service.faq.length > 0 ? service.faq : service.aiTrainingData.commonQuestions).map((qa) => (
            <div class="faq-item">
              <h3 class="faq-question">{qa.question}</h3>
              <p class="faq-answer">{qa.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  ) : null}

  <!-- CTA Section -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow Your Business?</h2>
        <p class="cta-description">
          Book a free strategy call to discuss how we can help you dominate local searches and capture more $5k+ jobs.
        </p>
        <div class="cta-buttons">
          <a href="/free-audit" class="cta-button primary">
            Get Free Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-section">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-header">
          <h3 class="footer-logo">Floorplay</h3>
        </div>
