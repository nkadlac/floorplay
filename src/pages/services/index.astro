  }

  .cta-button.secondary:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
  }

  /* Services Grid Section */
  .services-grid-section {
    background: #f8f9fa;
    padding: 60px 0;
  }

  .section-title {
    font-family: 'Big Shoulders Display', sans-serif;
    font-weight: 700;
    font-size: 48px;
    color: #000000;
    letter-spacing: -0.96px;
    line-height: 1.4;
    margin: 0 0 50px 0;
    text-align: center;
    text-wrap: balance;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }

  .service-card {
    background: #ffffff;
