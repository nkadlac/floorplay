    line-height: 1.3;
    margin: 0 0 20px 0;
    text-wrap: balance;
  }

  .benefit-description {
    font-family: 'Work Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #000000;
    letter-spacing: -0.32px;
    line-height: 1.4;
    margin: 0;
  }

  /* Final CTA Section */
  .final-cta {
    background: #ffffff;
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
