---
import Layout from '../../layouts/Layout.astro';
import { createClient } from '@sanity/client';

const sanityClient = createClient({
  projectId: 'tvo5sug9',
  dataset: 'production',
  useCdn: false, // Disable CDN for live updates during development
  apiVersion: '2024-01-01',
});

// Fetch all services
const services = await sanityClient.fetch(`
  *[_type == "service"] | order(_createdAt desc){
    name,
    slug,
    shortDescription,
    features,
    "image": images[0],
    seo
  }
`);

// SEO content
const pageData = {
  title: "Marketing Services for Epoxy Contractors | FloorPlay Agency",
  seo: {
    metaTitle: "Marketing Services for Epoxy Contractors | FloorPlay Agency",
    metaDescription: "Comprehensive marketing services designed specifically for epoxy and concrete coating contractors. Local SEO, lead generation, and growth strategies."
  }
};

// Image constants (reusing from homepage)
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
---

<Layout 
  title={pageData.seo.metaTitle}
  description={pageData.seo.metaDescription}
>

  <!-- Header Section -->
  <section class="header-section">
    <div class="container">
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <a href="/"><h1>Floorplay</h1></a>
            <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
          </div>
          <nav class="nav">
            <a href="/services/flooring-contractors-seo" class="nav-link active">Services</a>
            <a href="/free-audit" class="nav-link">Free Local Audit</a>
          </nav>
        </div>
        <div class="divider"></div>
      </div>
    </div>
  </section>

  <!-- Services Hero Section -->
  <section class="services-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Marketing Services Built for Epoxy Contractors</h1>
        <p class="hero-description">
          Stop losing $5k+ jobs to competitors online. Our specialized marketing services help epoxy contractors dominate local searches and capture more premium leads.
        </p>
        <div class="hero-cta">
          <a href="/free-audit" class="cta-button primary">
            Get My Free Local SEO Audit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="services-grid-section">
    <div class="container">
      <h2 class="section-title">Our Services</h2>
      <div class="services-grid">
        {services.map((service) => (
          <div class="service-card">
            <div class="service-content">
              <h3 class="service-name">
                <a href={`/services/${service.slug.current}`}>{service.name}</a>
              </h3>
              <p class="service-description">{service.shortDescription}</p>
              
              {service.features && service.features.length > 0 && (
                <div class="service-features">
                  <h4 class="features-title">Key Features:</h4>
                  <ul class="features-list">
                    {service.features.slice(0, 3).map((feature) => (
                      <li class="feature-item">
                        <span class="feature-check">✓</span>
                        <span>{feature}</span>
                      </li>
                    ))}
                    {service.features.length > 3 && (
                      <li class="feature-more">
                        + {service.features.length - 3} more features
                      </li>
                    )}
                  </ul>
                </div>
              )}
              
              <div class="service-cta">
                <a href={`/services/${service.slug.current}`} class="service-link">
                  Learn More →
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-section">
    <div class="container">
      <h2 class="section-title">Why Epoxy Contractors Choose FloorPlay</h2>
      <div class="benefits-grid">
        <div class="benefit-item">
          <h3 class="benefit-title">Industry Specialization</h3>
          <p class="benefit-description">We only work with epoxy, concrete, and flooring contractors. We know your market, customers, and challenges.</p>
        </div>
        <div class="benefit-item">
          <h3 class="benefit-title">Proven Results</h3>
          <p class="benefit-description">Our clients typically see 2-5 additional $5k+ jobs monthly within 6 months of working with us.</p>
        </div>
        <div class="benefit-item">
          <h3 class="benefit-title">Local Focus</h3>
          <p class="benefit-description">We help you dominate local searches for "epoxy garage floor [your city]" and capture premium homeowner leads.</p>
        </div>
        <div class="benefit-item">
          <h3 class="benefit-title">No Long Contracts</h3>
          <p class="benefit-description">Month-to-month service with transparent reporting. You see exactly where your investment is going.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow Your Epoxy Business?</h2>
        <p class="cta-description">
          Get your free audit and see exactly how many $5k+ jobs you're losing to competitors online.
        </p>
        <div class="cta-buttons">
          <a href="/free-audit" class="cta-button primary">
            Get Your Free Audit
          </a>
          <a href="mailto:nate@floorplay.agency" class="cta-button secondary">
            Email Us Directly
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-section">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-header">
          <h3 class="footer-logo">Floorplay</h3>
        </div>
        <nav class="footer-nav">
          <a href="/" class="footer-link">Home</a>
          <a href="/services/flooring-contractors-seo" class="footer-link">Local Search Marketing</a>
          <a href="/free-audit" class="footer-link">Free SEO Audit</a>
        </nav>
        <p class="footer-copyright">All rights reserved. Copyright © 2025 Floorplay</p>
      </div>
    </div>
  </section>
</Layout>

