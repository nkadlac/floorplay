    line-height: 1.4;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header-section {
      padding: 40px 0;
    }

    .logo-nav {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
    }
    
    .logo {
