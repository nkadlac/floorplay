    padding: 24px 32px;
    background: #2563eb;
    color: #ffffff;
  }

  .cta-button.primary .cta-arrow {
    padding: 24px 32px;
    background: #1e293b;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 60px;
  }

  .cta-button.primary:hover {
