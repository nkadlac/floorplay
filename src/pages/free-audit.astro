---
import Layout from '../layouts/Layout.astro';

// Page content
const content = {
  title: "Get Your Free Epoxy Lead Audit",
  seo: {
    metaTitle: "Free Epoxy Lead Audit | Floorplay Agency - Find Your Lost Leads",
    metaDescription: "Get a free audit showing exactly how many $5k+ epoxy jobs you're losing to competitors online. See where your leads are going and how to get them back."
  },
  hero: {
    headline: "Get Your Free Epoxy Lead Audit",
    subheadline: "See exactly how many $5k+ jobs you're losing to competitors online and get a personalized action plan to capture them.",
    benefits: [
      "Competitor analysis for your local market",
      "Search ranking gaps costing you leads", 
      "Custom strategy to dominate local searches"
    ]
  }
};

// Image constants (reusing from homepage)
const imgDivider = "http://localhost:3845/assets/5234c6adb3e005f5c06592e41b6fc5cb71a97964.svg";
---

<Layout 
  title={content.seo?.metaTitle || content.title}
  description={content.seo?.metaDescription}
  canonical="https://floorplay.agency/free-audit/"
>

  <!-- Header Section -->
  <section class="header-section">
    <div class="container">
      <div class="header">
        <div class="logo-nav">
          <div class="logo">
            <a href="/"><h1>Floorplay</h1></a>
            <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
          </div>
          <nav class="nav">
            <a href="/services/flooring-contractors-seo" class="nav-link">Services</a>
            <a href="/free-audit" class="nav-link active">Free Local Audit</a>
          </nav>
        </div>
        <div class="divider"></div>
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section class="form-section">
    <div class="container">
      <!-- Header Content -->
      <div class="form-header">
        <h1 class="form-headline">{content.hero?.headline || content.title}</h1>
        <p class="form-subheadline">
          {content.hero?.subheadline || "See exactly how many $5k+ jobs you're losing to competitors online and get a personalized action plan to capture them."}
        </p>
        <div class="benefits-list">
          {content.hero.benefits.map((benefit) => (
            <div class="benefit-item">
              <span class="benefit-check">✓</span>
              <span>{benefit}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Audit Form -->
      <div class="audit-form">
        <form id="auditForm" name="audit-request" method="POST" netlify action="/thank-you">
          <input type="hidden" name="form-name" value="audit-request" />
          <div class="form-grid">
            <div class="form-group">
              <label for="firstName" class="form-label">First Name *</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                class="form-input" 
                required 
                placeholder="Enter your first name"
              />
            </div>

            <div class="form-group">
              <label for="lastName" class="form-label">Last Name *</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                class="form-input" 
                required 
                placeholder="Enter your last name"
              />
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Business Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="form-input" 
                required 
                placeholder="your.email@company.com"
              />
            </div>

            <div class="form-group">
              <label for="phone" class="form-label">Phone Number *</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="form-input" 
                required 
                placeholder="(555) 123-4567"
              />
            </div>

            <div class="form-group">
              <label for="company" class="form-label">Company Name *</label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                class="form-input" 
                required 
                placeholder="Your Company Name"
              />
            </div>

            <div class="form-group">
              <label for="website" class="form-label">Website URL</label>
              <input 
                type="url" 
                id="website" 
                name="website" 
                class="form-input" 
                placeholder="https://yourwebsite.com"
              />
            </div>

            <div class="form-group full-width">
              <label for="city" class="form-label">Primary Service Area (City, State) *</label>
              <input 
                type="text" 
                id="city" 
                name="city" 
                class="form-input" 
                required 
                placeholder="e.g., Mequon, WI"
              />
            </div>

            <div class="form-group full-width">
              <label for="services" class="form-label">Primary Services *</label>
              <div class="checkbox-group">
                <label class="checkbox-item">
                  <input type="checkbox" name="services" value="garage-epoxy" />
                  <span class="checkmark"></span>
                  Garage Epoxy Flooring
                </label>
                <label class="checkbox-item">
                  <input type="checkbox" name="services" value="basement-flooring" />
                  <span class="checkmark"></span>
                  Basement Flooring
                </label>
                <label class="checkbox-item">
                  <input type="checkbox" name="services" value="commercial-epoxy" />
                  <span class="checkmark"></span>
                  Commercial Epoxy
                </label>
                <label class="checkbox-item">
                  <input type="checkbox" name="services" value="concrete-coating" />
                  <span class="checkmark"></span>
                  Concrete Coatings
                </label>
              </div>
            </div>

            <div class="form-group full-width">
              <label for="monthlyJobs" class="form-label">How many epoxy jobs do you complete monthly? *</label>
              <select id="monthlyJobs" name="monthlyJobs" class="form-select" required>
                <option value="">Select range...</option>
                <option value="0-2">0-2 jobs</option>
                <option value="3-5">3-5 jobs</option>
                <option value="6-10">6-10 jobs</option>
                <option value="11-20">11-20 jobs</option>
                <option value="20+">20+ jobs</option>
              </select>
            </div>

            <div class="form-group full-width">
              <label for="challenges" class="form-label">Biggest lead generation challenge? *</label>
              <select id="challenges" name="challenges" class="form-select" required>
                <option value="">Select your biggest challenge...</option>
                <option value="not-enough-leads">Not getting enough leads</option>
                <option value="low-quality-leads">Getting low-quality leads</option>
                <option value="losing-to-competitors">Losing jobs to competitors</option>
                <option value="poor-online-presence">Poor online visibility</option>
                <option value="pricing-pressure">Pricing pressure</option>
                <option value="seasonal-fluctuations">Seasonal business fluctuations</option>
              </select>
            </div>
          </div>

          <div class="form-submit">
            <button type="submit" class="submit-button">
              Get My Free Audit Report
            </button>
            <p class="form-disclaimer">
              * We'll email your personalized audit within 24 hours. No spam, just actionable insights.
            </p>
          </div>
        </form>
      </div>
    </div>
  </section>


  <!-- Trust Section -->
  <section class="trust-section">
    <div class="container">
      <p class="trust-text">
        Join 200+ epoxy contractors who've used our audits to identify and capture $50k+ in lost leads annually.
      </p>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer-section">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-header">
          <h3 class="footer-logo">Floorplay</h3>
        </div>
        <nav class="footer-nav">
          <a href="/" class="footer-link">Home</a>
          <a href="/services/flooring-contractors-seo" class="footer-link">Local Search Marketing</a>
          <a href="/free-audit" class="footer-link">Free SEO Audit</a>
        </nav>
        <p class="footer-copyright">All rights reserved. Copyright © 2025 Floorplay</p>
      </div>
    </div>
  </section>
</Layout>

