---
// Sanity Studio - use localhost in dev, Sanity Manage in production
const isDev = import.meta.env.DEV;

if (!isDev) {
  // In production, redirect to Sanity Manage
  return Astro.redirect('https://www.sanity.io/manage/personal/project/tvo5sug9', 302);
}
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sanity Studio</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
        }
        iframe {
            width: 100%;
            height: 100vh;
            border: none;
        }
        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="loading" id="loading">Loading Sanity Studio...</div>
    <iframe src="http://localhost:3333/" title="Sanity Studio" onload="document.getElementById('loading').style.display='none'"></iframe>
</body>
</html>