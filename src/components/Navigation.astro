---
import floorplayLogo from '../assets/floorplay-logomark.svg';

export interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;

// Image constants removed - using CSS borders instead
---

<!-- Header -->
<div class="header">
  <div class="logo-nav">
    <div class="logo">
      <a href="/" class="logo-link">
        <img src={floorplayLogo.src} alt="Floorplay" class="logo-image" />
      </a>
      <p class="logo-tagline">LOCAL SEO BUILT FOR FLOORING PROS</p>
    </div>
    <!-- Desktop Navigation -->
    <nav class="nav desktop-nav">
      <a href="/services/flooring-contractors-seo/" class={`nav-link ${currentPage === 'services' ? 'active' : ''}`}>Services</a>
      <a href="/free-audit/" class="nav-link nav-cta">
        <span class="nav-cta-text">Free Local Plan</span>
        <span class="nav-cta-arrow">â†’</span>
      </a>
    </nav>
    
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle mobile menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
  <div class="divider"></div>
</div>



<style>
  /* Header */
  .header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .logo-nav {
    display: flex;
    justify-content: space-between;
    align-items: end;
  }

  .logo {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .logo-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .logo-image {
    height: auto;
    flex-shrink: 0;
  }

  .logo-text {
    font-family: 'Big Shoulders Display', sans-serif;
    font-weight: 700;
    font-size: 32px;
    letter-spacing: 1.6px;
    margin: 0;
    line-height: 0.831;
    color: #000000;
  }

  .logo a {
    text-decoration: none;
    color: inherit;
  }

  .logo-tagline {
    font-family: 'Work Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #626262;
    letter-spacing: -0.28px;
    line-height: 1.2;
    text-transform: uppercase;
    margin: 0;
  }

  .nav {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .nav-link {
    font-family: 'Work Sans', sans-serif;
    font-weight: 700;
    font-size: 16px;
    color: #000000;
    text-decoration: none;
    letter-spacing: 0.8px;
    line-height: 0.831;
    padding: 8px 4px;
    position: relative;
    cursor: pointer;
  }

  .nav-link.active {
    color: #2563eb;
    border-bottom: 2px solid #2563eb;
  }

  .nav-link:hover {
    color: #2563eb;
  }

  .nav-cta {
    display: flex;
    align-items: center;
    background: #1e293b;
    color: #ffffff;
    padding: 0;
    border-radius: 4px;
    overflow: hidden;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }

  .nav-cta-text {
    padding: 12px 16px;
    background: inherit;
    color: #ffffff;
  }

  .nav-cta-arrow {
    padding: 12px 16px;
    background: #1e293b;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
  }

  .nav-cta:hover .nav-cta-arrow {
    transform: translateX(2px);
  }

  .divider {
    height: 1px;
    background: #e5e7eb;
    width: 100%;
  }

  /* Mobile Menu Styles */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 24px;
    height: 24px;
    cursor: pointer;
    padding: 0;
    position: relative;
    z-index: 10000;
    gap: 3px;
  }

  .mobile-menu-btn.active {
    position: fixed !important;
    top: 40px !important;
    right: 1rem !important;
    z-index: 100000 !important;
  }

  .hamburger-line {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #000000;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .mobile-menu-btn.active .hamburger-line {
    background-color: #ffffff;
  }

  .mobile-menu-btn.active .hamburger-line:first-child {
    transform: translateY(6px) rotate(45deg);
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .mobile-menu-btn.active .hamburger-line:last-child {
    transform: translateY(-6px) rotate(-45deg);
  }



  /* Mobile Responsive */
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
    
    .logo-nav {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
    }
    
    .logo {
      text-align: left;
    }

    .logo-image {
      height: auto;
    }
    
    .logo-text {
      font-size: 28px;
    }
    
    .logo-tagline {
      font-size: 12px;
    }
    
    .nav {
      gap: 16px;
    }
    
    .nav-link {
      font-size: 18px;
    }
    
    .nav-cta-arrow {
      display: none;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const overlay = document.querySelector('.mobile-menu-overlay');
  const closeBtn = document.querySelector('.mobile-close-btn');
  
  if (menuBtn && overlay && closeBtn) {
    menuBtn.addEventListener('click', function() {
      overlay.style.display = 'block';
      menuBtn.classList.add('active');
      document.body.style.overflow = 'hidden';
    });
    
    closeBtn.addEventListener('click', function() {
      overlay.style.display = 'none';
      menuBtn.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  }
});
</script>