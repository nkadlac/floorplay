---
// Footer component
import arrowIcon from '../assets/arrow.svg';
---

<!-- Footer Section -->
<section class="footer-section">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-left">
        <h3 class="footer-logo">Floorplay</h3>
        <p class="footer-tagline">Floors are your craft. Getting you found is ours.</p>
        <p class="footer-copyright">Copyright Â© 2025 Floorplay. All rights reserved.</p>
      </div>
      <nav class="footer-nav">
        <a href="/" class="footer-link">
          <img src={arrowIcon.src} alt="arrow" class="footer-arrow" />
          <span>Home</span>
        </a>
        <a href="/services/flooring-contractors-seo/" class="footer-link">
          <img src={arrowIcon.src} alt="arrow" class="footer-arrow" />
          <span>Local Search Marketing</span>
        </a>
        <a href="/free-audit/" class="footer-link">
          <img src={arrowIcon.src} alt="arrow" class="footer-arrow" />
          <span>Free SEO Audit</span>
        </a>
      </nav>
    </div>
  </div>
</section>

<style>
  /* Footer Section */
  .footer-section {
    background: #000000;
    padding: 112px 0;
  }

  .footer-container {
    display: flex;
    justify-content: center;
    padding: 0 1rem;
  }

  .footer-content {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    width: 860px;
    margin: 0 auto;
    gap: 200px;
  }

  .footer-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-logo {
    font-family: 'Big Shoulders Display', sans-serif;
    font-weight: 700;
    font-size: 49px;
    color: #ffffff;
    letter-spacing: -0.98px;
    line-height: 1.4;
    margin: 0;
  }

  .footer-tagline {
    font-family: 'Work Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #ffffff;
    letter-spacing: -0.32px;
    line-height: 1.4;
    margin: 0;
    text-wrap: balance;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }

  .footer-link {
    font-family: 'Work Sans', sans-serif;
    font-weight: 400;
    font-size: 20px;
    color: #ffffff;
    text-decoration: none;
    letter-spacing: -0.4px;
    line-height: 1.4;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .footer-arrow {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
  }

  .footer-link span {
    flex: 1;
  }

  .footer-link:hover {
    color: #2563eb;
  }

  .footer-copyright {
    font-family: 'Work Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #838383;
    letter-spacing: -0.28px;
    line-height: 1.4;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .footer-section {
      padding: 60px 0;
    }

    .footer-content {
      flex-direction: column;
      gap: 24px;
    }

    .footer-logo {
      font-size: 32px;
      letter-spacing: -0.64px;
    }

    .footer-link {
      font-size: 18px;
      letter-spacing: -0.36px;
    }

    .footer-arrow {
      width: 28px;
      height: 28px;
    }

    .footer-copyright {
      font-size: 12px;
      letter-spacing: -0.24px;
    }
  }
</style>